PREFIX : <https://linked.data.gov.au/def/geosample/>
PREFIX geo: <http://www.opengis.net/ont/geosparql#>
PREFIX geofh: <https://linked.data.gov.au/def/geosample/>
PREFIX ont: <https://linked.data.gov.au/def/geofh>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX schema: <https://schema.org/>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX sosa: <http://www.w3.org/ns/sosa/>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

:1.0 schema:name "1.0" .

ont:
    a owl:Ontology ;
    owl:versionIRI :1.0 ;
    schema:codeRepository "https://github.com/Kurrawong/gswa-supermodel/"^^xsd:anyURI ;
    schema:copyrightHolder <https://linked.data.gov.au/org/gswa> ;
    schema:creator <https://kurrawong.ai> ;
    schema:dateCreated "2023-05-15"^^xsd:date ;
    schema:dateModified "2025-09-17"^^xsd:date ;
    schema:dateIssued "2025-02-15"^^xsd:date ;
    schema:description """A model of geological samples""" ;
    schema:license <http://purl.org/NET/rdflicense/cc-by4.0> ;
    schema:name "Geosamples Model" ;
    schema:publisher <https://linked.data.gov.au/org/gswa> ;
    schema:version "1.0" ;
    skos:historyNote """1.0 - Sep 2025 - First complete version released into the GSWA Knowledge Graph""" ;
    schema:hasPart
        sosa:Sample ,
        :currentLocation ,
        schema:material ,
        :samplingLocation ,
        :samplingMethod ;
.

sosa:Sample
    a owl:Class ;
    rdfs:isDefinedBy <http://www.w3.org/ns/sosa> ;
    schema:description "Feature which is intended to be representative of a FeatureOfInterest on which Observations may be made." ;
    schema:name "Sample" ;
    skos:example """
ex:sample-x
    a sosa:Sample ;
    sosa:isSampleOf ex:bore-x ;
    :currentLocation [
        a geo:Geometry ;
        schema:description "GSWA Rock Store > Building C > Self 25 > Box 3"
    ] ;
    schema:material ex:Rock ;
    :samplingLocation ex:location-of-bore-x ;
    :samplingMethod ex:CoreDrill ;
    schema:additionalType ex:CoreSectionHalf ;
.
""" ;
    skos:historyNote "Taken directly from SOSA" ;
.


:currentLocation 
    a owl:ObjectProperty ;
    rdfs:isDefinedBy ont: ;
    rdfs:domain sosa:Sample ;
    rdfs:range geo:Geometry ;
    schema:name "current location" ;
    schema:description "The location of the sample, currently" ;
    skos:example "See the example for Sample" ;
    skos:historyNote "Implemented for the first time here" ;
.

schema:material
    a owl:ObjectProperty ;
    rdfs:isDefinedBy <https://schema.org> ;
    rdfs:domain sosa:Sample ;
    schema:name "material" ;
    rdfs:range skos:Concept ;
    schema:description "A material that something is made from" ;
    skos:example "See the example for Sample" ;
    skos:historyNote "Inspired by GeoSciML" ;
.

:samplingLocation 
    a owl:ObjectProperty ;
    rdfs:isDefinedBy ont: ;
    rdfs:domain sosa:Sample ;
    rdfs:range geo:Geometry ;
    schema:name "sampling location" ;
    schema:description "The location the sample was acquired from" ;
    skos:example "See the example for Sample" ;
    skos:historyNote "Inspired by GeoSciML" ;
.

:samplingMethod 
    a owl:ObjectProperty ;
    rdfs:isDefinedBy ont: ;
    rdfs:domain sosa:Sample ;
    rdfs:range skos:Concept ;
    schema:name "sampling method" ;
    schema:description "The method used to obtain the sample" ;
    skos:example "See the example for Sample" ;
    skos:historyNote "Inspired by GeoSciML" ;
.
